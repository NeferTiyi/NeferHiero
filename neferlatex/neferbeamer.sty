% Environment
% ===========
% .. Exemple ..
\newenvironment{exple}%
  {\begin{list}{\textbf{\uline{Ex} :}}%
      {\setlength\itemindent{0.0ex}\setlength\leftmargin{5.0ex}}%
   \item\ignorespaces}%
  {\unskip\end{list}}

% .. Remarks ..
\newenvironment{remarque}%
  {\begin{list}{\textbf{\uline{Rem} :}}%
      {\setlength\itemindent{-2.4ex}\setlength\leftmargin{7.8ex}}%
   \item\ignorespaces}%
  {\unskip\end{list}}

